<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.itesm.digital.solar.ResultsWithoutObstacles"
    tools:showIn="@layout/activity_results_without_obstacles">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ap="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@color/accent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/accent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <com.androidplot.xy.XYPlot
                    style="@style/APDefacto.Light"
                    android:id="@+id/plot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ap:title="Payback"
                    ap:rangeTitle="range"
                    ap:domainTitle="AÃ±os"
                    ap:lineLabels="left|bottom"
                    ap:lineLabelRotationBottom="0"
                    ap:lineLabelRotationLeft="-55" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ROI 12738.56"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/roi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payback 1"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/payback"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Savings 10198.7"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/earnings"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Cost 732499.76"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/total_cost"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
