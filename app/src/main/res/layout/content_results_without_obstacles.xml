<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.itesm.digital.solar.ResultsWithoutObstacles"
    tools:showIn="@layout/activity_results_without_obstacles">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_alternatives"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/accent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ROI 12738.56"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/roi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payback 1"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/payback"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Savings 10198.7"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/earnings"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Cost 732499.76"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:id="@+id/total_cost"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
